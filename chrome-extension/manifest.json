 {
    "name": "Turtle Simulator",
    "description" : "Simulates computercraft turtles",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["*://rextester.com/*"],
    "browser_action": {
      "title": "Turtle Simulator"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Opens extension page"
      }
    },
    "web_accessible_resources": [
      "simulator.lua"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }
